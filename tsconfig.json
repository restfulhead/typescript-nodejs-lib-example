{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "stripInternal": true
  },
  "include": ["./src"],
  "exclude": ["node_modules"],
  "compileOnSave": false,
  "buildOnSave": false
}
